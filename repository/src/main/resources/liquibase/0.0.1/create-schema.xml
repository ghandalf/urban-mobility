    <changeSet id="Create-0001" author="Francis Ouellet" dbms="postgresql, hsqldb">
        <comment>First creation of table Item</comment>
        <sql dbms="postgresql" endDelimiter="">
            create table Books (
            id bigint not null primary key,
            title text,
            author text,
            ISBN text,
            description text,
            year int
            )
        </sql>
        <rollback>drop table Books;</rollback>
    </changeSet>

    <changeSet id="Create=002" author="Ghandalf" dbms="postgresql, hsqldb">
